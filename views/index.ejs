<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8'>
		<title>Nodejs App</title>
		<link href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/journal/bootstrap.min.css' rel='stylesheet'>
		<link rel='stylesheet' href='css/style.css'>
    <link rel='stylesheet' type='text/css' href='../slick/slick.css'/>
    <link rel='stylesheet' type='text/css' href='../slick/slick-theme.css'/>
		<script src='../jquery-3.2.1.min.js'></script>
    <script src='../jquery-ui.min.js'>
    </script>
	</head>
	<body>
    <h1 class='title'>Photo slider</h1>
		<div class='jumbotron'>
      <h3 class='subtitle'>Fade with autoplay</h3>
      <div class='photos-slider'>
        <div><img class='img-1 photo' src='../images/summer.jpg' /></div>
        <div><img class='img-2 photo' src='../images/valentinesday.jpg' /></div>
        <div><img class='img-3 photo' src='../images/mothersday.jpg' /></div>
        <div><img class='img-4 photo' src='../images/fathersday.jpg' /></div>
        <div><img class='img-5 photo' src='../images/halloween.jpg' /></div>
        <div><img class='img-6 photo' src='../images/christmas.jpg' /></div>
      </div>
      <h3 class='subtitle'>Center mode</h3>
      <div class='photos slider'>
        <div><img class='img-1 photo-center' src='../images/summer.jpg' /></div>
        <div><img class='img-2 photo-center' src='../images/valentinesday.jpg' /></div>
        <div><img class='img-3 photo-center' src='../images/mothersday.jpg' /></div>
        <div><img class='img-4 photo-center' src='../images/fathersday.jpg' /></div>
        <div><img class='img-5 photo-center' src='../images/halloween.jpg' /></div>
        <div><img class='img-6 photo-center' src='../images/christmas.jpg' /></div>
      </div>
		</div>
		<script type='text/javascript'>
	    $(document).ready(function(){
				$('.photos-slider').slick({
				  dots: true,
				  infinite: true,
				  speed: 500,
				  fade: true,
				  autoplay: true,
				  autoplaySpeed: 2000
				});
				$('.photos').slick({
			    dots: true,
			    autoplay: true,
			    centerMode: true,
			    slidesToShow: 3,
			    slidesToScroll: 3,
			    responsive: [
			      {
			        breakpoint: 768,
			        settings: {
			          arrows: false,
			          centerMode: true,
			          centerPadding: '40px',
			          slidesToShow: 3
			        }
			      },
			      {
			        breakpoint: 480,
			        settings: {
			          arrows: false,
			          centerMode: true,
			          centerPadding: '40px',
			          slidesToShow: 1
			        }
			      }
			    ]
			  });
	    });
	  </script>
    <script type='text/javascript' src='../slick/slick.min.js'></script>
	</body>
</html>
